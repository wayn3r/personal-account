{
  "name": "personal",
  "version": "1.0.0",
  "description": "Personal is an application to save your personal transactions and keep the history of your money movement",
  "main": "src/app.js",
  "scripts": {
    "start": "node dist/app",
    "build": "esbuild src/app.ts --bundle --platform=node --outdir=dist",
    "dev:build": "npm run build -- --watch",
    "dev:start": "nodemon dist/app",
    "dev": "npm run build && npm run dev:build & npm run dev:start",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [
    "personal",
    "account",
    "money",
    "bank"
  ],
  "author": "Wayner De La Cruz",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/express": "4.17.13",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "esbuild": "0.14.23",
    "eslint": "8.8.0",
    "nodemon": "2.0.15"
  },
  "dependencies": {
    "dotenv": "16.0.0",
    "express": "4.17.2"
  }
}
